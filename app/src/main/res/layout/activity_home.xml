<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.limpi.home"
    style="@style/Drawer"
    android:id="@+id/drawer"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >



        <TextView
            android:id="@+id/hola"
            android:layout_width="180dp"
            android:layout_height="135dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:text="¡Hola"
            android:textColor="#000"
            android:textSize="36dp"
            />

        <TextView
            android:id="@+id/user"
            android:layout_width="180dp"
            android:layout_height="135dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/hola"
            android:gravity="center_vertical"
            android:textColor="#2AFFBA"
            android:textSize="36dp" />



    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="337dp"
            android:layout_height="24dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="@string/c_mo_podemos_ayudarte"
            android:textColor="#000"
            android:textSize="12dp" />
        <ImageView
            android:id="@+id/boton_membre"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="250dp"
            android:src="@drawable/membresia" />

        <ImageView
            android:id="@+id/boton_pedidos"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_marginLeft="62dp"
            android:layout_marginTop="250dp"
            android:layout_toRightOf="@+id/boton_membre"
            android:src="@drawable/pedidos"
            />

        <TextView
            android:id="@+id/txtmembre"
            android:layout_width="132dp"
            android:layout_height="24dp"
            android:layout_below="@+id/boton_membre"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="19dp"
            android:gravity="center_horizontal"
            android:text="Membresía"
            android:textColor="#000"
            android:layout_alignParentLeft="true"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txtmebre1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtmembre"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-2dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal"
            android:text="@string/txtmembre1"
            android:textColor="#000"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/txtmembre2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtmembre"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/txtmembre"
            android:gravity="center_horizontal"
            android:text="@string/txtmembre2"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/txtpedidos"
            android:layout_width="132dp"
            android:layout_height="24dp"
            android:layout_below="@+id/boton_membre"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="19dp"
            android:layout_toRightOf="@+id/txtmembre"
            android:gravity="center_horizontal"
            android:text="Pedidos"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/NavihatioStyle"
        app:menu="@menu/menu_navegar"
        android:layout_gravity="start"
        app:headerLayout="@layout/cabecera"

        >

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>